.operate-bar {
  z-index: 1001;
  position: fixed;
  bottom: 0px;
  left: 0;
  height: 55px;
  width: 100%;
  display: flex;
}

.gouwuche {
  width: 75%;
  background: #353535;
  height: 100%;
}

.top-wrap {
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.adress-a {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 30rpx;
}

.line {
  margin-left: 30rpx;
  height: 1px;
  background: #f0f0f0;
}

.flex-1 {
  flex: 1;
  text-align: right;
  color: #666;
  padding-left: 20rpx;
}

.gouwuche-icon {
  font-size: 40px;
  color: #87888e;
  margin-left: 10px;
  position: relative;
}

.number-msg {
  padding: 1px 7px;
  border-radius: 50%;
  background: red;
  color: white;
  font-size: 14px;
  position: absolute;
  text-align: center;
  top: 0px;
  right: -5px;
}

.gouwuche-price {
  color: #a9a9a9;
  display: flex;
  align-items: center;
  margin-left: 10px;
}

.submit-btn {
  height: 100%;
  background: #f7f7f7;
