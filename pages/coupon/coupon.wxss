.nav {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  font-size: 30rpx;
}
page{
  width:100%;
  margin: 0
}
.flex{
  flex: 1;
  text-align: justify;
}
i{
  height: 10rpx;
  width: 10rpx;
  background: #666;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.row{
  margin-bottom: 30rpx;
}
.nav .item {
  padding: 30rpx 5rpx;
}
.codeNumber{
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}
.nav .active {
  border-bottom: 2px solid #df7b58;
  color: #df7b58;
}

.tab .item {
  width: 90%;
  display: flex;
  align-items: center;
  background: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin: 30rpx auto 0;
  min-height: 200rpx;
  overflow: hidden;
}

.tab .item .money {
  width: 200rpx;
  background: #25ced5;
  color: #fff;
  height: 200rpx;
  line-height: 1.6;
  text-align: center;
}

.tab .item .money .m {
  font-size: 36rpx;
  margin-top: 40rpx;
}

.tab .item .money .y {
  font-size: 30rpx;
}

.tab .item .money .s {
  font-size: 26rpx;
}

.tab .item .right {
  flex: 1;
  padding-left: 20rpx;
  border-bottom: 1px dotted #e7f8f8;
  height: 199rpx;
}

.top .d {
  font-size: 24rpx;
  background: #25ced5;
  color: #fff;
  padding: 4rpx 6rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.top .x {
  font-size: 24rpx;
  background: #fbd0c0;
  color: #ec5b29;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  float: right;
  margin-right: 30rpx;
}
.right .top{
  margin-top: 30rpx;
}
.top .s {
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}

.right .time {
  font-size: 24rpx;
  color: #666;
  margin-top: 40rpx;
  line-height: 1.6;
}

.role {
  color: #666;
  background: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  width: 86%;
  padding: 2%;
  margin: 0 auto;
}

.role .sm {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.icon-up {
  height: 30rpx;
  width: 30rpx;
}
.ccc{
  background: #ccc !important;
}