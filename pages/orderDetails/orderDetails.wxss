page{
  overflow-x: hidden;
  width:94%;

}
.status-wrap {
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.status-card {
  width: 90%;
  height: 200rpx;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #000;
}

.f28 {
  font-size: 28rpx;
}

.status-card .card {
  height: 165rpx;
  width: 50rpx;
  padding: 0 10rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  padding-top: 36rpx;
}

.status-card .item {
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.status-card .code {
  font-weight: bold;
  margin-right: 20rpx;
  font-size: 40rpx;
}

.good-info {
  background: #fff;
  font-size: 36rpx; border-radius: 8rpx;
  overflow: hidden;
}

.title {
  background: #fff;
  color: #666;
  padding: 20rpx;
  font-size: 28rpx;
  position: relative;
}

.title .cancle {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  font-size: 30rpx;
  padding: 15rpx 20rpx;
  border-radius: 5rpx;
  margin-left: 30rpx;
  color: #fff;
}

.good {
  background: #f8f8f8;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 32rpx;
}

.good .cover {
  height: 160rpx;
  width: 160rpx;
  border-radius: 5rpx;
}

.good .info {
  position: relative;
  flex: 1;
  margin-left: 16rpx;
}

.good .info .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.good .info .style {
  margin-top: 72rpx;
}

.total {
  background: #fff;
  padding: 20rpx;
  text-align: right;
  font-size: 28rpx;
}

.total .totalMoney {
  color: #a5b730;
}

.mark-wrap {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.mark-wrap .name {
  color: #666;
  width: 80rpx;
}

.mark-wrap .info {
  flex: 1;
}

.order-info {
  margin-top: 20rpx;
  background: #fff;
  margin-bottom: 20rpx; border-radius: 8rpx;
  overflow: hidden;
}

.order-info .item {
  display: flex;
  align-items: center;
  border-top: 1px solid #f0f0f0;
  padding:15rpx;
}

.order-info .item .title {
  width: 130rpx;
  text-align: left;
}

.mark {
  font-size: 30rpx;
  border: 1px dotted #666;
  padding: 20rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
  width: 550rpx;
}

.huabian {
  height: 200rpx;
  width: 30rpx;
}

.xxx {
  flex: 1;
  background: #fff;
  height: 100%;
  padding-left: 35rpx;
}
