  height: 100%;
  background: #f7f7f7;
  width: 25%;
  display: flex;
}

.activity-color-bg {
  background: #a5b730;
}

.cart-list-box {
  background: #fff;
  display: flex;
  border-bottom: 1px #f0f0f0 solid;
}

.list-info {
  width: 50%;
  padding: 5px 0;
}

.list-info-size {
  color: #666;
  font-size: 26rpx;
}

.icon-li-circle {
  margin-left: 15px;
}

.font20 {
  font-size: 20px;
}

.top-bar {
  height: 50px;
  line-height: 50px;
  background: white;
  border-radius: 8rpx 8rpx 0 0;
}

.top-left-label {
  float: left;
  padding: 0 5px;
  margin-left: 10px;
}

.top-right-label {
  float: right;
  padding: 0 10px;
  border-radius: 8rpx;
}

.order-info {
  background: white;
  margin-top: 10px;
  padding-left: 30rpx;
  border-radius: 8rpx;
}

.order-info-title {
  color: #666;
  padding: 12px 12px 12px 0;
  border-bottom: 1px #f0f0f0 solid;
}

.order-cut {
  height: 30px;
  padding: 5px 15px;
  border-bottom: 1px #f0f0f0 solid;
}

.order-cut-dec {
  background: #f07474;
  color: white;
  padding: 2px;
}

.order-cut-note {
  margin-left: 3px;
}

.order-cut-number {
  float: right;
}

.order-sum {
  height: 30px;
  padding: 5px 30rpx 5px 0;
  line-height: 30px;
}

.order-sum-number {
  float: right;
}

.note {
  padding: 15px;
  background: white;
  margin-top: 10px;
  border-radius: 8rpx;
}

.h {
  height: 70px;
}

.note-text {
  width: 95%;
  background: #f2f2f2;
  padding: 10px;
  height: 60px;
  margin: 5px 0;
  font-size: 30rpx;
  position: relative;
}

.limit {
  position: absolute;
  right: 10px;
  bottom: 10px;
  font-size: 24rpx;
  color: #666;
}

