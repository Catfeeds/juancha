

.good-info {
  background: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 5px #ccc;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  color: #666;
  padding: 30rpx;  font-size: 28rpx;
  border-bottom: 1px solid #f0f0f0;
}
.title .status{
  width: 136rpx;
  text-align: right;
}
.shopName{
  flex: 1;
}
.canclea{
  float: right;
  margin-top: 15rpx;
}
.good {
  background: #f8f8f8;
  display: flex;
  align-items: center;
  padding:20rpx 30rpx;
  font-size: 30rpx;
}
.f28{
  font-size: 28rpx;
}
.good .cover {
  height: 160rpx;
  width: 160rpx;
  border-radius: 5rpx;
}

.good .info {
  position: relative;
  flex: 1;
  margin-left: 16rpx;
}

.good .info .item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

/* .good .info .price {
  font-weight: bold;
} */

.good .info .style {
  margin-top:72rpx;
}

/* .good .info .name {
  font-weight: bold;
} */

.total {
  background: #fff;
  padding:20rpx;
  text-align: right;
  font-size: 28rpx;
   border-bottom: 1px solid #f0f0f0;
}
.operation {
  background: #fff;
  padding:18rpx;
  text-align: right;
  font-size: 28rpx;
}
.operation text{
  padding: 16rpx 20rpx;
  border-radius: 5rpx;margin-left: 30rpx;
  color: #fff;
}

/*tab  */
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  padding-bottom: 1rpx;
  position: fixed;
  top: 0;
  left: 0;
  height: 90rpx;
  z-index: 9999;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 18%;
  margin: 0 12%;
  color: #fff;
}

.on {
  border-bottom: 6rpx solid #fff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin-top: 90rpx;
}
